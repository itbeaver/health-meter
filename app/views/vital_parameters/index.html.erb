<h1>Health</h1>
<table class="table table-hover">
  <thead>
  <tr>
    <th>age</th>
    <th>height</th>
    <th>weight</th>
    <th>heart_rate</th>
    <th>systolic_blood_pressure</th>
    <th>diastolic_pressure</th>
    <th></th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @vital_parameters.each do |vital| %>
      <tr>
        <td><%= vital.age %></td>
        <td><%= vital.height %></td>
        <td><%= vital.weight %></td>
        <td><%= vital.heart_rate %></td>
        <td><%= vital.systolic_blood_pressure %></td>
        <td><%= vital.diastolic_pressure %></td>
        <td><%= link_to 'Edit vital', edit_vital_parameter_path(vital) %></td>
        <td><%= link_to 'Destroy vital', vital_parameter_path(vital),
                        method: :delete,
                        data: { confirm: "Are you sure?" } %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

